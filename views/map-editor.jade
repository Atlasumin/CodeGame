extends layout

block content
  include ./include/header.jade
  h2 创建新地图

  form(action="/map/create" method="post")
    p
      label(for="data") 地图名称
      input(name="name")

    p
      label(for="data") 地图数据
      textarea(name="data" cols="30" rows="30")

    p
      label(for="data") 地图种类
      select(name="type")
        option(value="general")    普通
        option(value="rank")       排名赛
        option(value="tournament") 杯赛

    input(type="submit" value="create")
