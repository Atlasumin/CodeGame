extends layout

block content
  include ./include/header.jade

  .rank-section
    h2 全网排行榜
      span 测试阶段大约一天更新一次
    table
      thead
        tr
          th 排名
          th 玩家
          th 胜
          th 负
          th 胜率
      tbody
        each item, index in rank
          tr
            td #{index + 1}
            td
              a(href="/#{item.User.login}") #{item.User.name}
            td #{item.win}
            td #{item.lost}
            td #{Math.round(item.win / (item.win + item.lost) * 100)}%
